{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "declaration": false,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "tests", "examples"],
  "include": ["src/**/*"] 
  }
  