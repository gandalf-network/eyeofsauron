{
    "compilerOptions": {
      "target": "es2016",
      // "rootDir": "./src", 
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "module": "CommonJS",
      "declaration": false, // Consider setting to false if not needed
      "sourceMap": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "allowJs": true
    },
    "exclude": ["**/*.spec.ts", "**/*.test.ts", "tests", "examples"],
    "include": ["src/**/*"] 
  }
  